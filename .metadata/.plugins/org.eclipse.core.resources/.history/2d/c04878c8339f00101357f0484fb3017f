<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>JSP태그 - 스크립트</title>
</head>
<!-- 전역 공간 -->
<%!
int count =0; //전역 변수 선언(값을 유지, 공유)
%>
<body>
	<h2>스크립트릿 태그 예제</h2>
	<%
	int n1 = 10, n2 = 20;
	
	out.println("두 수의 합" + (n1 + n2));
	
	%>
	
	<h3>두 수 의 합:<%= n1 + n2 %></h3>
	<h3>사이트 방문은 <%= ++count %></h3>
</body>
</html>