<meta charset="UTF-8">
<title>useBean- 로그인 처리</title>
</head>
<!-- login(인스턴스) :new LoginBean과 같음 -->
<jsp:useBean id="login" class="beans.LoginBean" scope= "request"></jsp:useBean>
<body>
	<% 
		String id = request.getParameter("uid");
		String pw = request.getParameter("passwd");
		
		// out.println("아이디: " + id  + " <br> 비밀번호: " + pw); 
		
		boolean result = login.checkUser();
		if(result){
			out.println("로그인 성공!!");
		}
	%>

</body>
</html>